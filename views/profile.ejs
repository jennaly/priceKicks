<!DOCTYPE html>
<html lang="en" class="dark:bg-black">
<head>
    <%- include('./partials/head'); %>
    <title>PriceKicks Profile</title>
</head>
<body>
    <div class="container px-5 md:mx-auto my-10">
        <nav>
            <div class="navbar bg-base-100 dark:bg-black">
                <div class="navbar-start">
                  <div class="dropdown">
                    <label tabindex="0" class="btn btn-ghost lg:hidden">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /></svg>
                    </label>
                    <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
                        <li> <a href="./" class="btn btn-ghost uppercase dark:text-slate-200">Home</a></li>
                        <li> <a href="./#favorites" class="btn btn-ghost uppercase dark:text-slate-200">Favorites</a></li>
                        <li> <a href="/logout" class="btn btn-ghost uppercase dark:text-slate-200">Logout</a></li>
                    </ul>
                  </div>
                  <a href="/" class="btn btn-ghost uppercase text-2xl md:text-4xl dark:text-slate-300">PriceKicks</a>
                </div>
                <div class="navbar-center hidden lg:flex">
                  <ul class="menu menu-horizontal p-0">
                    <li> <a href="./" class="btn btn-ghost uppercase dark:text-slate-200">Home</a></li>
                    <li> <a href="./#favorites" class="btn btn-ghost uppercase dark:text-slate-200">Favorites</a></li>
                  </ul>
                </div>
                <div class="navbar-end">
                    <button class="btn btn-ghost btn-square btn-outline"><a href="/logout" class="dark:text-slate-200">Log out</a></button>
                </div>
            </div>
        </nav>

        <div class="flex flex-col items-center mt-4">
            <h1 class="text-2xl mt-4 font-light tracking-tight text-black dark:text-slate-200">User Profile</h1>
            <div class="card card-normal px-4 mt-4  bg-slate-100 dark:bg-zinc-900 rounded-md border border-solid border-slate-200 dark:border-zinc-800">
                <div class="card body items-center">
                    <form action="/profile?_method=PUT" method="post" class="px-1.5 pb-4">
                        <section class="mt-4 items-center">
                            <div class="form-control w-full max-w-xs">
                                <label class="label">
                                <span class="label-text">Update your StockX Seller Level</span>
                                </label>
                                <select class="select w-full max-w-xs rounded-md focus:outline-offset-0 focus:outline-2 focus:outline-blue-500 dark:focus:outline-sky-500 dark:text-slate-300 dark:bg-black"  id="stockXTransactionFee" name="stockXTransactionFee" required>
                                    <option disabled selected class="text-sm font-thin"> <%= stockXSellerLevel %> </option>
                                    <option value=0.10>Level 1</option>
                                    <option value=0.095>Level 2</option>
                                    <option value=0.09>Level 3</option>
                                    <option value=0.085>Level 4</option>
                                    <option value=0.08>Level 5</option>
                                </select>     
                            </div>               
                        </section>

                        <section class="mt-4 items-center">
                            <div class="form-control w-full max-w-xs">
                                <label class="label">
                                    <span class="label-text">Update your Goat Seller Rating</span>
                                </label>
                                <select class="select w-full max-w-xs rounded-md focus:outline-offset-0 focus:outline-2 focus:outline-blue-500 dark:focus:outline-sky-500 dark:text-slate-300 dark:bg-black"  id="goatCommissionFee" name="goatCommissionFee" required>
                                    <option disabled selected class="text-sm"> <%= goatSellerRating %> </option>
                                    <option value=0.095>90 or greater</option>
                                    <option value=0.15>70-89</option>
                                    <option value=0.20>50-69</option>
                                    <option value=0.25>Less than 50</option>
                                </select>      
                            </div>              
                        </section>

                        <button class="mt-4 btn-block px-2 py-2 rounded-md bg-green-600 dark:bg-green-700 hover:bg-green-700 dark:hover:bg-green-600 text-white text-sm font-semibold" type="submit">Submit Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/signupValidation.js"></script>
</body>
</html>



