<!DOCTYPE html>
<html lang="en" class="dark:bg-black">
<head>
    <%- include('./partials/head'); %>
    <title>PriceKicks</title>
</head>
<body>
    <div class="container px-5 md:mx-auto my-10">
        <nav>
            <%- include('./partials/nav'); %>
        </nav>

        <header class="mt-5"> 

            <div class="flex flex-col w-full lg:flex-row">
                <div class="grid flex-grow h-64 card border border-sky-500 rounded-box"> <%- include('./partials/product-search-bar'); %> </div> 
                <div class="divider lg:divider-horizontal">OR</div> 
                <% if (favoriteProducts.length > 0) { %>
                    <div class="grid flex-grow h-64 overflow-y-auto p-2 card border border-sky-500 rounded-box place-items-center"> <%- include('./partials/favorites-table'); %> </div>
                <% } else { %>
                    <div class="grid flex-grow h-64 card border border-sky-500 rounded-box place-items-center">You don't have any sneakers saved! </div>
                <% } %>
            </div>

        </header>

        <div class="overflow-x-auto rounded-md" >
            <div class="card xl:card-side">
                <figure class="w-10/12"><img src="<%= goatProductMetadata.image %>" alt="<%= goatProductMetadata.name %>" class=""/></figure>
                <div class="card-body">
                  <h2 class="card-title"> <%= goatProductMetadata.name %> </h2>
                  <p> <%= goatSku %> </p>
                  <p> <%= goatProductDescription %> </p>
                  
                  <div class="card-actions justify-end">
                  
                    <form action="/product" method="POST">
                        <input type="hidden" id="sku" name="sku" value="<%= goatSku %>"/>
                        <input type="hidden" id="imageUrl" name="imageUrl" value="<%=  goatProductMetadata.image %>"/>
                        <input type="hidden" id="productName" name="productName" value="<%= goatProductMetadata.name %>"/>
                        <button class="btn bg-blue-900 dark:bg-blue-500 hover:dark:bg-blue-400 dark:text-slate-300" type="submit">Save to Favorites</button>
                    </form>

                  </div>
                </div>
            </div>
        </div>

        <div class="overflow-x-auto rounded-md">
            <%- include('./partials/price-table'); %>
        </div>
    </div>

 
</body>
</html>