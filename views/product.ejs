    <div class="hero" style="background-image: url(../assets/index-hero2.jpg);">
        <div class="hero-overlay bg-opacity-80"></div>
        <div class="text-center text-neutral-content py-20">
            <div class="max-w-md">
                <h1 class="mb-5 text-4xl font-bold leading-tight">Explore the world's leading design portfolios</h1>
                <p class="mb-5">Millions of designers and agencies around the world showcase their portfolio word on Dribble - the home to the world's best design and creative professionals.</p>
                <form action="/product" method='GET' >
                    <input type="search" placeholder="Search..." name="sku" class="w-full max-w-md mt-4 rounded-full p-4 px-6 text-black" required/>
                    <button type="submit"></button>
                </form>
            </div>
        </div>
    </div>
        
    <div class="container px-5 md:mx-auto my-10">
        <div class="overflow-x-auto rounded-md" >
            <div class="card xl:card-side">
                <figure class="2xl:w-1/2"><img src="<%= goatProductMetadata.image %>" alt="<%= goatProductMetadata.name %>" /></figure>
                <div class="flex flex-col justify-center gap-y-6">
                    <div>
                        <h2 class="card-title text-3xl"> <%= goatProductMetadata.name %> </h2>
                        <p class="text-lg font-normal text-slate-500"> <%= goatSku %> </p>
                    </div>
                    <p> <%= goatProductDescription %> </p>
                
                <div class="card-actions justify-end">
                
                    <form action="/product" method="POST">
                        <input type="hidden" id="sku" name="sku" value="<%= goatSku %>"/>
                        <input type="hidden" id="imageUrl" name="imageUrl" value="<%=  goatProductMetadata.image %>"/>
                        <input type="hidden" id="productName" name="productName" value="<%= goatProductMetadata.name %>"/>
                        <button class="btn bg-blue-900 dark:bg-blue-500 hover:dark:bg-blue-400 dark:text-slate-300 mt-2 md:mt-0" type="submit">Save to Favorites</button>
                    </form>

                </div>
                </div>
            </div>
        </div>

        <div class="overflow-x-auto rounded-md">
            <!--tab links-->
            <div class="tabs">
                <a class="tab tab-lifted tab-active" onclick="toggleTable(event, 'LowestAsk')">Lowest Ask</a> 
                <a class="tab tab-lifted"  onclick="toggleTable(event, 'Payout')">Payout</a> 
            </div>
            <!--Tab content-->
            <div id="LowestAsk" class="tabcontent">
                <%- include('./partials/price-table'); %>
            </div>

            <div id="Payout" class="tabcontent">
                <%- include('./partials/payout-table'); %>
            </div>
            
        </div>
        
    </div>

    <script src="/js/priceTableToggle.js"></script>
</body>
</html>